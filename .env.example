# OpenAI API Key
OPENAI_API_KEY=sk-...

# Optional: OpenAI Organization ID
# OPENAI_ORGANIZATION=org-...

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# ⚠️ Service Role Keyは秘密情報です。Supabaseダッシュボードから取得してください
# Settings > API > Project API keys > service_role (secret)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ACCESS_TOKEN=your_access_token_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=ATLAS

# Admin Users Configuration
# Comma-separated list of usernames that have admin access
# Default: 'admin' if not set
NEXT_PUBLIC_ADMIN_USERNAMES=
